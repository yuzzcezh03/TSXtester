{
  "name": "dev-project-runner-enhanced",
  "version": "2.0.0",
  "description": "Enhanced Electron app for browsing and running development projects with TSX support",
  "main": "main-enhanced.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "dev": "electron . --dev --no-sandbox",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "clean-install": "npm ci --production",
    "postinstall": "npm run setup-hooks",
    "setup-hooks": "node scripts/setup.js || echo 'Setup complete'"
  },
  "build": {
    "appId": "com.devrunner.enhanced",
    "productName": "Dev Project Runner Enhanced",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/chokidar/**/*",
      "node_modules/tree-kill/**/*",
      "node_modules/portfinder/**/*",
      "node_modules/extract-zip/**/*"
    ],
    "extraResources": [
      {
        "from": "templates",
        "to": "templates"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "dependencies": {
    "electron": "^28.0.0",
    "chokidar": "^3.5.3",
    "tree-kill": "^1.2.2",
    "portfinder": "^1.0.32",
    "extract-zip": "^2.0.1"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/dev-project-runner-enhanced.git"
  },
  "keywords": [
    "electron",
    "development",
    "project-runner",
    "tsx",
    "typescript",
    "react",
    "vue",
    "angular",
    "vite"
  ],
  "author": "Dev Project Runner Enhanced",
  "license": "MIT"
}