{
  "name": "dev-project-runner",
  "version": "1.0.0",
  "description": "Standalone Electron app for browsing and running development projects",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.devrunner.app",
    "productName": "Dev Project Runner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/chokidar/**/*",
      "node_modules/tree-kill/**/*",
      "node_modules/portfinder/**/*",
      "node_modules/extract-zip/**/*"
    ],
    "extraResources": [
      {
        "from": "templates",
        "to": "templates"
      },
      {
        "from": "tools",
        "to": "tools"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "dependencies": {
    "electron": "^28.0.0",
    "chokidar": "^3.5.3",
    "tree-kill": "^1.2.2",
    "portfinder": "^1.0.32",
    "extract-zip": "^2.0.1",
    "node-pty": "^1.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4"
  },
  "author": "Dev Project Runner",
  "license": "MIT"
}